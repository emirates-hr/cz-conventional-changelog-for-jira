{
  "name": "@emirates-hr/cz-conventional-changelog-for-jira",
  "version": "0.0.3",
  "description": "Commitizen adapter following the conventional-changelog format and also asking for JIRA issue.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha *.test.js",
    "format": "prettier --write *.js",
    "semantic-release": "semantic-release",
    "prepublishOnly": "npm test",
    "preversion": "npm run lint"
  },
  "homepage": "https://github.com/digitalroute/cz-conventional-changelog-for-jira",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emirates-hr/cz-conventional-changelog-for-jira.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 10"
  },
  "author": "Marcus Johansson <polarn@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "commitizen": "^4.0.3",
    "git-branch": "^2.0.1",
    "gitlog": "4.0.2",
    "lodash.map": "^4.5.1",
    "longest": "^2.0.1",
    "right-pad": "^1.0.1",
    "word-wrap": "^1.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "cosmiconfig": "^5.2.1",
    "cz-conventional-changelog": "^3.1.0",
    "mocha": "^6.2.0",
    "mock-require": "^3.0.3",
    "prettier": "^1.15.3",
    "semantic-release": "^15.13.3",
    "semver": "^6.2.0"
  },
  "optionalDependencies": {
    "@commitlint/load": ">6.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./index.js",
      "jiraMode": false,
      "skipScope": true
    }
  }
}
